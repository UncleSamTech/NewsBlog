<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="@dimen/img_view_dimen"
        android:layout_height="@dimen/img_view_dimen"
        android:src="@drawable/kanu"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/nav_header_vertical_spacing"
        android:id="@+id/img_news_pic"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/img_view_dimen"
       android:layout_margin="@dimen/nav_header_vertical_spacing"
       android:layout_toRightOf="@id/img_news_pic"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:textAlignment="center"
           android:textStyle="bold"
           android:id="@+id/tv_news_title"
           android:layout_weight="1.5"
           tools:text="NNAMDI KANU RESURFACES IN ISRAEL"
           />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="@dimen/img_view_icon"
               android:layout_height="@dimen/img_view_icon"
               android:layout_marginRight="@dimen/nav_header_vertical_spacing"
               android:src="@drawable/date_icon" />

           <TextView
               android:id="@+id/tv_news_date"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_marginRight="@dimen/nav_header_vertical_spacing"
               android:layout_weight="2"
               android:baselineAligned="false"
               android:fontFamily="sans-serif-condensed"
               tools:text="6th Jan 2018" />

           <ImageView
               android:layout_width="@dimen/img_view_icon"
               android:layout_height="@dimen/img_view_icon"
               android:layout_marginRight="@dimen/nav_header_vertical_spacing"
               android:src="@drawable/view_icon" />

           <TextView
               android:id="@+id/tv_news_count"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:fontFamily="sans-serif-condensed"
               tools:text="200" />


       </LinearLayout>

   </LinearLayout>

<ImageView
    android:layout_width="@dimen/img_view_icon"
    android:layout_height="@dimen/img_view_icon"
    android:layout_alignParentRight="true"
    android:layout_marginTop="@dimen/img_view_icons"
    android:layout_marginRight="@dimen/nav_header_vertical_spacing"
    android:src="@drawable/next_icon"/>


</RelativeLayout>
